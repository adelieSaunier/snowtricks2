{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="container">
    <div class="row padd100top pb-5">
        <div class="col">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

                <h1 class="h3 pt-3 mb-3 font-weight-normal">Me connecter</h1>
                <label class="pt-3 pb-1" for="inputEmail">Mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control pb-2" autocomplete="email" required autofocus>
                <label class="pt-3 pb-1" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control pb-2" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="pt-5 pb-5">   
                    <button class="btn btn-lg btn-primary" type="submit">
                        Me connecter
                    </button>
                    <a href="{{ path('app_register') }}" class="btn btn-secondary my-3">Me créer un compte</a>

                    <a href="{{ path('forgotten_password') }}" class="btn btn-secondary my-3">Mot de passe oublié</a>
                </div>
            </form>

        </div>
    </div>
</section>

{% endblock %}
